@model PrescriptionModel


<head>
    <link rel="stylesheet" href="~/css/StyleDossier.css" />
</head>
<body>
    <div>
        <div class="row">
            <div class="column"></div>
            <div class="column">
                @using (Html.BeginForm())
                {
                    <h1>Ajouter au dossier medical</h1>
                    <br />
                    if (ViewBag?.messageErreur != null)
                    {
                        <div class="alert alert-danger alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <strong>@ViewBag.messageErreur</strong>
                        </div>
                    }
                    <div>
                        <strong>@Html.LabelFor(m => m.Description)</strong>
                        @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                        <br />
                    </div>
                    <div>
                        <strong>@Html.LabelFor(m => m.Notes)</strong>
                        @Html.TextBoxFor(m => m.Notes, new { @class = "form-control" })
                        <br />
                    </div>
                    <div>
                        <strong>@Html.LabelFor(m => m.References)</strong>
                        @Html.TextBoxFor(m => m.References, new { @class = "form-control" })
                        <br />
                    </div>
                    <br />
                    <br />
                    <div class="d-flex justify-content-center">
                        <button asp-controller="Dossier" asp-action="AjouterPrescription" class="btn btn-primary btn-lg center">Ajouter au dossier</button>
                    </div>
                }
            </div>
            <div class="column"></div>
        </div>
</body>

